# Caddy automatisches HTTPS
# Ersetze yourdomain.com mit deiner echten Domain
{
    # Automatisches HTTPS für alle Domains
    auto_https off
}

# Für lokales selbstsigniertes Zertifikat
https://217.154.223.78, https://localhost {
    tls internal
    reverse_proxy app:3000
}

# Falls du eine echte Domain hast, verwende das:
# yourdomain.com {
#     reverse_proxy app:3000
# }
